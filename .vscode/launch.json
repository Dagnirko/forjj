    "version": "0.2.0",
    "configurations": [

        {
            "name": "Do create forjj_test without maintain",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}",
            "env": {
                "GOTRACE": "true",
                "DOCKER_SUDO": "sudo"
            },
            "preLaunchTask": "clean forjj_test",
            "args": [
                "create",
                "--forjfile-path",
                "samples/forjj_test",
                "--no-maintain",
                "--run-plugin-debugger",
                "github,jenkins"
            ]
        },
